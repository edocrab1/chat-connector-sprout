
{
  "manifest_version": 3,
  "name": "Telegram-style Chat Extension",
  "version": "1.0.0",
  "description": "A beautiful Telegram-style chat interface as a Chrome extension",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "permissions": ["storage"],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
